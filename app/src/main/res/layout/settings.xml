<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff250706"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:password="false"
        android:singleLine="true"
        android:enabled="true"
        android:editable="true"
        android:layout_weight="0.64"
        android:layout_gravity="center_vertical"
        android:text="root"
        android:textColor="#ffff6c56"
        android:layout_above="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:password="false"
        android:singleLine="true"
        android:enabled="true"
        android:editable="true"
        android:layout_weight="0.64"
        android:textColor="#ffff6c56"
        android:text="127.0.0.1"
        android:layout_above="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:textSize="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:password="false"
        android:singleLine="true"
        android:enabled="true"
        android:editable="true"
        android:layout_weight="0.64"
        android:text="changeme"
        android:textColor="#ffff6c56"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView6"
        android:textColor="@color/customred"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Address:"
        android:id="@+id/textView7"
        android:textColor="@color/customred"
        android:layout_above="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:password="false"
        android:singleLine="true"
        android:enabled="true"
        android:editable="true"
        android:layout_weight="0.64"
        android:text="/mnt/sdcard1/Latest.kml"
        android:textColor="#ffff6c56"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storing Path:"
        android:id="@+id/textView8"
        android:textColor="@color/customred"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User:"
        android:id="@+id/textView5"
        android:textColor="@color/customred"
        android:layout_above="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings:"
        android:id="@+id/textView9"
        android:textColor="@color/customred"
        android:textSize="30dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics:"
        android:id="@+id/textView10"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/customred"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="#ff561e1f"
        android:textColor="#ffb13e3e"
        android:shadowColor="#ff301212"
        android:enabled="true"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:text="NUMBER OF APs IN LAST OR CURRENT CAPTURE"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*The reults will be shown as Output"
        android:id="@+id/textView11"
        android:textColor="@color/customred"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>