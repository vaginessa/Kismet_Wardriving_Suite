<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff250706">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Make sure BlueNMEA and a chroot linux environment with Kismet, Gpsd and Giskismet are already running"
        android:id="@+id/textView2"
        android:textColor="#ff943837"
        android:textSize="13dp"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Gpsd Service"
        android:id="@+id/switch1"
        android:textColor="#ffd34c4b"
        android:buttonTint="#ffd34c4b"
        android:buttonTintMode="multiply"
        android:checked="false"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:nestedScrollingEnabled="false"
        android:textSize="20dp"
        android:enabled="true"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kismet Server"
        android:id="@+id/switch2"
        android:textColor="#ffd34c4b"
        android:buttonTint="#ffd34c4b"
        android:buttonTintMode="multiply"
        android:checked="false"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:nestedScrollingEnabled="false"
        android:textSize="20dp"
        android:enabled="true"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Giskismet"
        android:id="@+id/button"
        android:background="#ff561e1f"
        android:textColor="#ffb13e3e"
        android:shadowColor="#ff301212"
        android:enabled="true"
        android:clickable="true"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets up the connection shell and switches the gpsd service on or off"
        android:id="@+id/textView3"
        android:textColor="#ff943837"
        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switches the Kismet server on or off"
        android:id="@+id/textView4"
        android:textColor="#ff943837"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAFE EXIT"
        android:id="@+id/button2"
        android:background="#ff561e1f"
        android:textColor="#ffb13e3e"
        android:shadowColor="#ff301212"
        android:enabled="true"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
